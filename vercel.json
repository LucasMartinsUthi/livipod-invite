{
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/invite/create",
      "destination": "/api/invite?action=create"
    },
    {
      "source": "/api/invite/accept",
      "destination": "/api/invite?action=accept"
    },
    {
      "source": "/api/invite/:inviteId",
      "destination": "/api/invite?inviteId=:inviteId"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/.well-known/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
